""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set surround
set highlightedyank
set NERDTree
set multiple-cursors
set commentary
set argtextobj
set easymotion
set textobj-entire
set ReplaceWithRegister
set quickscope
set vim-paragraph-motion
set textobj-indent


""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>,{:}"
"let g:qs_highlight_on_keys = ['f', 'F', 't', 'T']
set keep-english-in-normal


""" Common settings -------------------------
set incsearch
set relativenumber
set scrolloff=5
set clipboard=unnamed

" nopes
noremap W <Nop>
noremap B <Nop>
noremap ^ <Nop> 
noremap $ <Nop> 
noremap <C-d> <Nop>
noremap <C-u> <Nop>

" operators
onoremap w iw
onoremap W iW
onoremap iw ]w
onoremap <Leader>w w
onoremap <Leader>W W
onoremap ( a(
onoremap ) i(
onoremap { a{
onoremap } i{
onoremap [ a[
onoremap ] i[
onoremap < a<
onoremap > i<

" navigation
noremap <C-Left> B
noremap <C-Down> }
noremap <C-Up> {
noremap <C-Right> W

noremap <Home> ^
noremap <End> g_

noremap <PageUp> <C-u>
noremap <PageDown> <C-d>
noremap <S-PageUp> <C-f>
noremap <S-PageDown> <C-b>
noremap <C-PageUp> gg
noremap <C-PageDown> G

" enhance
noremap Y y$
noremap Q @q
noremap U <C-r>
noremap X r
noremap j J
noremap J kJ

noremap <C-.> f.
noremap <C-,> F.
noremap <C-p> "0p
noremap <C-s> :w<CR>

noremap <Leader>; g_a;<Esc>
noremap <Leader>a a <Esc>a
noremap <Leader>i i <Esc>i
noremap <leader>tl :noh<CR>
noremap <Leader>ca :tabo<CR>


""" Idea specific settings ------------------
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep
set clipboard+=ideaput


""" Idea mappings --------------------------------
map <Leader>s :source ~/.ideavimrc<CR>

noremap r gr
noremap rr grr
noremap R gr$

map s <Plug>(easymotion-s)
map S <Plug>(easymotion-sl)

map gt <Action>(GotoTypeDeclaration)
map gi <Action>(GotoImplementation)

map <S-Left> <Action>(GotoPreviousError)
map <S-Down> <Action>(MethodDown)
map <S-Up> <Action>(MethodUp)
map <S-Right> <Action>(GotoNextError)
map <C-S-Down> <Action>(Forward)
map <C-S-Up> <Action>(Back)

map <C-S-Tab> <Action>(PreviousTab)
map <C-Tab> <Action>(NextTab)
map <C-w> <Action>(CloseEditor)

map h <Action>(QuickJavaDoc)
imap <C-h> <Action>(ParameterInfo)

map <C-m> <Action>(SelectInProjectView)
map <C-a> <Action>(ShowIntentionActions)
map <C-r> <Action>(Debug)
map <C-t> <Action>(ActivateProblemsViewToolWindow)
map <C-f> <Action>(GotoClass)

map <Leader>rr <Action>(Rerun)
map <Leader>rs <Action>(Stop)<Action>(HideAllWindows)

map <Leader>rn <Action>(RenameElement)
map <Leader>rf <Action>(ReformatCode)

map <Leader>su <Action>(Switcher)
map <Leader>su <Action>(ShowUsages)
map <Leader>se <Action>(ShowErrorDescription)
map <Leader>sd <Action>(QuickJavaDoc)
map <Leader>sp <Action>(ParameterInfo)
map <Leader>sr <Action>(Refactorings.QuickListPopupAction)

map <Leader>ha <Action>(HideAllWindows)

map <Leader>tb <Action>(ToggleLineBreakpoint)
map <Leader>th <Action>(ToggleInlayHintsGloballyAction)